

<!-- Display other employee information -->
<%= render @employee %>
<h1><%= @employee.name %></h1>
<h2>Leaves:</h2>
<% if @employee.leafs.any? %>
  <ul>
    <% @employee.leafs.each do |leave| %>
      <li>
        <strong>status:</strong> <%= leave.status %><br>
        <strong>Reason:</strong> <%= leave.reason %><br>
        <strong>Start Date:</strong> <%= leave.start_date %><br>        
        <strong>End Date:</strong> <%= leave.end_date %><br>
        <strong>Total Days:</strong> <%= distance_of_time_in_words(leave.start_date, leave.end_date, include_seconds: false) %>

        
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No leaves associated with this employee.</p>
<% end %>
<%= link_to "New Leaf", new_leaf_path(employee_id: @employee.id) %>

 <!--<%= link_to "View Leaves Details", employee_leafs_path(@employee) %> -->

<div>
  <%= link_to "Edit this employee", edit_employee_path(@employee) %> |
  <%= link_to "Back to employees", employees_path %>
  <%= button_to "Destroy this employee", @employee, method: :delete %>
</div>
<% if employee_signed_in? %>
  <div class="text-center text-muted mt-5 mb-0">
    Logged in as <strong><%= current_employee.email %></strong> <br>
    <%= link_to "Edit profile", edit_employee_registration_path, class: 'navbar-link' %>
    <%= link_to "Logout", destroy_employee_session_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'navbar-link' %>
  </div>
  <% else %>
    <div class="text-center text-muted mt-5 mb-0">
      Have already an account? <%= link_to "Login here", new_employee_session_path, class: 'fw-bold text-body' %>
    </div>
<% end %>